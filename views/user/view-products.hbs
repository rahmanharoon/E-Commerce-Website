<section>
    <div class="container mt-5">
        <div class="row">
            {{!-- <table class="table mt-5" id="productsTable"> --}}
                {{#each products}}
                <div class="col-md-3 p-3">
                    <div class="card" style="width: 15rem; height:28rem">
                        <img class="card-img-top" style="height: 18rem;" src="/product-images/{{this._id}}.jpg"
                            alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">{{this.Name}}</h5>
                            <p class="card-text">Rs.{{this.Price}}</p>
                            <p class="card-text">{{this.Description}}</p>
                            {{!-- <a href="/add-to-cart/{{this._id}}" >Add to cart</a> --}}
                            <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to cart</button>
                        </div>
                    </div>
                </div>
                {{/each}}
            {{!-- </table> --}}
        </div>
    </div>
</section>
