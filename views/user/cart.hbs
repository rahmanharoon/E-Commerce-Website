<section>
    <div class="container">
        <table class="table mt-5">
            <thead>
                <tr>
                    <th class="col">Item</th>
                    <th class="col">Title</th>
                    <th class="col">Quantity</th>
                </tr>
            </thead>
        </table>
        <tbody>
            {{#each products}}
            <tr>
                <td><img style="width: 70px; height:70px" src="/product-images/{{this._id}}.jpg" alt=""></td>
                <td>{{this.Name}}</td>
                <td>
                    <button class="cart-item-count mr-3">-</button>1<button class="cart-item-count ml-3">+</button>
                </td>
                <td>
                    <a href="" class="btn btn-danger">Remove</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </div>
</section>